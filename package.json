{
  "name": "sanitizer-polyfill",
  "version": "0.9.0",
  "description": "polyfill for the sanitizer api specification",
  "author": "Mozilla",
  "contributors": [
    "Frederik Braun <fbraun@mozilla.com>"
  ],
  "license": "MPL-2.0",
  "directories": {
    "test": "tests"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mozilla/sanitizer-polyfill.git"
  },
  "scripts": {
    "lint": "eslint . --exit-on-fatal-error",
    "autolint": "eslint . --fix && prettier --write .",
    "prettier": "prettier --check .",
    "build:cjs": "rollup --file build/cjs/sanitizer.js --format cjs --input src/polyfill.js",
    "build:es": "rollup --file build/es/sanitizer.js --format es --input src/polyfill.js",
    "test": "jasmine"
  },
  "bugs": {
    "url": "https://github.com/mozilla/sanitizer-polyfill/issues"
  },
  "homepage": "https://github.com/mozilla/sanitizer-polyfill#readme",
  "files": [
    "src",
    "package.json",
    "package-lock.json",
    "LICENSE.md",
    "README.md"
  ],
  "devDependencies": {
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-compat": "^3.12.0",
    "eslint-plugin-jsdoc": "^36.0.7",
    "eslint-plugin-prettier": "^3.4.0",
    "jasmine": "^3.9.0",
    "jasmine-browser-runner": "^0.8.0",
    "prettier": "^2.3.2",
    "rollup": "^2.56.2"
  },
  "dependencies": {
    "dompurify": "^2.3.1"
  }
}
